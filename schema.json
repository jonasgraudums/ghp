{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "uniqueItems": true,
  "items": {
    "type": "object",
    "required": [
      "id",
      "accounts",
      "description",
      "paths"
    ],
    "properties": {
      "id": {
        "type": "string",
        "pattern": "^USC_\\d{5}$"
      },
      "accounts": {
        "type": "array",
        "maxItems": 1,
        "items": {
          "type": "string"
        }
      },
      "only": {
        "type": "array",
        "items": {
          "type": "string",
          "enum": [
            "cte",
            "ppe",
            "ref",
            "pub"
          ]
        }
      },
      "paths": {
        "oneOf": [
          {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string",
              "pattern": "^[^/].*[^/]$"
            }
          },
          {
            "type": "array",
            "maxItems": 1,
            "items": {
              "type": "string",
              "pattern": "^\\*$"
            }
          }
        ]
      }
    }
  }
}
